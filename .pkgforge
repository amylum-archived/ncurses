name 'ncurses'
org 'amylum'

license 'COPYING'

source(
  type: 'tar',
  url: 'https://invisible-mirror.net/archives/ncurses/current/ncurses-6.0-20170923.tgz',
  checksum: '678a3549b144fd9ce00d5687d70eb8dd4352309f41790bdd0e7a4d94ade3361e'
)

configure_flags(
  prefix: '/usr',
  'with-shared': nil,
  'with-normal': nil,
  'without-cxx': nil,
  'without-cxx-binding': nil,
  'enable-widec': nil
)

harden

build do
  configure
  make
  install

  %w(ncurses form panel menu).each do |lib|
    File.open("#{releasedir}/usr/lib/lib#{lib}.so", 'w') do |fh|
      fh << "INPUT(-l#{lib}w)"
    end
  end

  File.open("#{releasedir}/usr/lib/libcursesw.so", 'w') do |fh|
    fh << 'INPUT(-lncursesw)'
  end
  run "ln -s libncurses.so #{releasedir}/usr/lib/libcurses.so"

end

test do
  run 'ncursesw6-config --version'
end
