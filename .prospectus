    latest = hrefs.select { |x| x =~ /^ncurses-.*\.tgz$/ }.sort.last
    version = latest.match(/^ncurses-([\d.-]+)\.tgz$/)[1]
    set version
  end

  actual do
    git_tag
    regex /^(.*)-\d+$/
  end
